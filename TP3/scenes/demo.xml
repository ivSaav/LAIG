<?xml version="1.0"?>
<lsf>
  <initials>
    <reference length="2"/>
    <!-- axis length; "0" means no axis displayed -->
    <root id="demoRoot"/>
    <!-- identifier of root node of the scene graph; this node -->
    <!-- must be defined in one of the following NODE declarations -->
  </initials>
  <views default="defaultCamera">
    <!-- at least one of the following type of cameras must be declared -->
    <perspective id="defaultCamera" near="0.1" far="500" angle="45">
      <from x="0" y="0" z="2"/>
      <!-- 0 -3 0-->
      <to x="0" y="0" z="0"/>
    </perspective>
    <ortho id="demoOrtho" near="0.2" far="100" left="-2" right="2" top="2" bottom="-2">
      <from x="0" y="0" z="-5"/>
      <to x="0" y="0" z="0"/>
      <up x="0" y="0" z="10"/>
      <!-- optional, default 0,1,0 -->
    </ortho>
  </views>
  <illumination>
    <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
    <!-- global ambient -->
    <background r="0.1" g="0.7" b="1.0" a="1.0"/>
    <!-- background color -->
  </illumination>
  <lights>
    <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
    <light id="demoLight">
      <!-- light identifier -->
      <enable value="1"/>
      <!-- enable/disable -->
      <position x="10" y="12" z="9.5" w="1.0"/>
      <!-- light position; w=1: point light; w=0: directional light -->
      <ambient r="0" g="0" b="0" a="1.0"/>
      <!-- ambient component -->
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0"/>
      <!-- diffuse component -->
      <specular r="1.0" g="1.0" b="1.0" a="1.0"/>
      <!-- specular component -->
    </light>
  </lights>
  <textures>
    <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
    <texture id="demoTexture" path="./scenes/images/demo.jpg"/>
    <texture id="whiteTileTexture" path="./scenes/images/whiteTile.jpg"/>
    <texture id="blackTileTexture" path="./scenes/images/blackTile.jpg"/>
    <texture id="whiteMarble" path="./scenes/images/whiteMarble.jpg"/>
    <texture id="blackMarble" path="./scenes/images/blackMarble.jpg"/>
    <texture id="startBtn" path="./scenes/images/buttons/startBtn.jpg"/>
    <texture id="applyBtn" path="./scenes/images/buttons/applyBtn.jpg"/>
    <texture id="themeBtn1" path="./scenes/images/buttons/themeBtn1.jpg"/>
    <texture id="themeBtn2" path="./scenes/images/buttons/themeBtn2.jpg"/>
    <texture id="themeBtn3" path="./scenes/images/buttons/themeBtn3.jpg"/>
    <texture id="modeBtn1" path="./scenes/images/buttons/modeBtn1.jpg"/>
    <texture id="modeBtn2" path="./scenes/images/buttons/modeBtn2.jpg"/>
    <texture id="modeBtn3" path="./scenes/images/buttons/modeBtn3.jpg"/>
    <texture id="lvlBtn1" path="./scenes/images/buttons/lvlBtn1.jpg"/>
    <texture id="lvlBtn2" path="./scenes/images/buttons/lvlBtn2.jpg"/>
    <texture id="lvlBtn3" path="./scenes/images/buttons/lvlBtn3.jpg"/>
    <texture id="incrBtn" path="./scenes/images/buttons/incrBtn.jpg"/>
    <texture id="decrBtn" path="./scenes/images/buttons/decrBtn.jpg"/>
    <texture id="exitBtn" path="./scenes/images/buttons/exitBtn.jpg"/>
    <texture id="greyBackground" path="./scenes/images/greyBackground.jpg"/>
  </textures>
  <materials>
    <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
    <material id="demoMaterial">
      <shininess value="1"/>
      <ambient r="0.5" g="0.5" b="0.5" a="1.0"/>
      <diffuse r="0.5" g="0.5" b="0.5" a="1.0"/>
      <specular r="0.5" g="0.5" b="0.5" a="1.0"/>
      <emissive r="0.5" g="0.5" b="0.5" a="1.0"/>
    </material>
  </materials>
  <spritesheets>
  </spritesheets>
  <nodes>
    <!--Pieces and Tiles are defined as normal objects-->
    <node id="whiteTile">
      <material id="demoMaterial"/>
      <texture id="whiteTileTexture">
      </texture>
      <amplification afs="1.0" aft="1.0"/>
      <transformations>
        <translation x="-0.5" y="0.0" z="0.5"/>
        <rotation axis="x" angle="-90"/>
        <scale sx="1" sy="1" sz="1"/>
      </transformations>
      <descendants>
        <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1"/>
      </descendants>
    </node>
    <node id="blackTile">
      <material id="demoMaterial"/>
      <texture id="blackTileTexture">
        <amplification afs="1.0" aft="1.0"/>
      </texture>
      <transformations>
        <translation x="-0.5" y="0.0" z="0.5"/>
        <rotation axis="x" angle="-90"/>
      </transformations>
      <descendants>
        <leaf type="rectangle" x1="0" y1="0" x2="1" y2="1"/>
      </descendants>
    </node>
    <node id="whitePiece">
      <material id="demoMaterial"/>
      <texture id="whiteMarble">
      </texture>
      <amplification afs="1.0" aft="1.0"/>
      <transformations>
      </transformations>
      <descendants>
        <leaf type="sphere" radius="0.2" slices="5" stacks="5"/>
      </descendants>
    </node>
    <node id="blackPiece">
      <material id="demoMaterial"/>
      <texture id="blackMarble">
        <amplification afs="1.0" aft="1.0"/>
      </texture>
      <transformations>
      </transformations>
      <descendants>
        <leaf type="sphere" radius="0.2" slices="5" stacks="5"/>
      </descendants>
    </node>
    <!-- Gameboard must have its object defined here. All tiles are placed with length 3x3 in xOz -->
    <node id="gameBoard">
      <material id="demoMaterial"/>
      <texture id="demoTexture">
        <amplification afs="1.0" aft="1.0"/>
      </texture>
      <transformations>
        <translation x="1.3" y="0.0" z="1.3"/>
        <rotation axis="x" angle="-90"/>
      </transformations>
      <descendants>
        <leaf type="torus" inner="0.2" outer="2.1213" slices="10" loops="10"/>
      </descendants>
    </node>
    <node id="menuPanel">
      <material id="demoMaterial"/>
      <texture id="greyBackground">
        <amplification afs="1.0" aft="1.0"/>
      </texture>
      <transformations>
        <translation x="-0.5" y="0.0" z="-1"/>
      </transformations>
      <descendants>
        <leaf type="rectangle" x1="0" y1="0" x2="2" y2="1.3"/>
        <noderef id="startButton"/>
        <noderef id="applyButton"/>
        <noderef id="themeBtn1"/>
        <noderef id="themeBtn2"/>
        <noderef id="themeBtn3"/>
        <noderef id="lvlBtn1"/>
        <noderef id="lvlBtn2"/>
        <noderef id="lvlBtn3"/>
        <noderef id="modeBtn1"/>
        <noderef id="modeBtn2"/>
        <noderef id="modeBtn3"/>
        <noderef id="incrBtnSize"/>
        <noderef id="decrBtnSize"/>
        <noderef id="incrBtnTime"/>
        <noderef id="decrBtnTime"/>
        <noderef id="timeCounter"/>
        <noderef id="exitBtn"/>
        <noderef id="sizeCounter"/>
      </descendants>
    </node>
    <node id="startButton">
      <material id="demoMaterial"/>
      <texture id="startBtn">
        <amplification afs="0.5" aft="0.2"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="actionButton" id="1" x1="1.4" y1="0.1" x2="1.9" y2="0.3" selected="false"/>
      </descendants>
    </node>
    <node id="applyButton">
      <material id="demoMaterial"/>
      <texture id="applyBtn">
        <amplification afs="0.5" aft="0.2"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="actionButton" id="2" x1="0.1" y1="0.1" x2="0.6" y2="0.3" selected="false"/>
      </descendants>
    </node>
    <node id="themeBtn1">
      <material id="demoMaterial"/>
      <texture id="themeBtn1">
        <amplification afs="0.4" aft="0.2"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="themeButton" id="1" x1="0.1" y1="0.4" x2="0.5" y2="0.6" selected="false"/>
      </descendants>
    </node>
    <node id="themeBtn2">
      <material id="demoMaterial"/>
      <texture id="themeBtn2">
        <amplification afs="0.4" aft="0.2"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="themeButton" id="2" x1="0.6" y1="0.4" x2="1.0" y2="0.6" selected="false"/>
      </descendants>
    </node>
    <node id="themeBtn3">
      <material id="demoMaterial"/>
      <texture id="themeBtn3">
        <amplification afs="0.4" aft="0.2"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="themeButton" id="3" x1="1.1" y1="0.4" x2="1.5" y2="0.6" selected="false"/>
      </descendants>
    </node>
    <node id="lvlBtn1">
      <material id="demoMaterial"/>
      <texture id="lvlBtn1">
        <amplification afs="0.4" aft="0.2"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="levelButton" id="1" x1="0.1" y1="0.7" x2="0.5" y2="0.9" selected="false"/>
      </descendants>
    </node>
    <node id="lvlBtn2">
      <material id="demoMaterial"/>
      <texture id="lvlBtn2">
        <amplification afs="0.4" aft="0.2"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="levelButton" id="2" x1="0.6" y1="0.7" x2="1.0" y2="0.9" selected="false"/>
      </descendants>
    </node>
    <node id="lvlBtn3">
      <material id="demoMaterial"/>
      <texture id="lvlBtn3">
        <amplification afs="0.4" aft="0.2"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="levelButton" id="3" x1="1.1" y1="0.7" x2="1.5" y2="0.9" selected="false"/>
      </descendants>
    </node>
    <node id="modeBtn1">
      <material id="demoMaterial"/>
      <texture id="modeBtn1">
        <amplification afs="0.4" aft="0.2"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="modeButton" id="1" x1="0.1" y1="1.0" x2="0.5" y2="1.2" selected="true"/>
      </descendants>
    </node>
    <node id="modeBtn2">
      <material id="demoMaterial"/>
      <texture id="modeBtn2">
        <amplification afs="0.4" aft="0.2"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="modeButton" id="2" x1="0.6" y1="1.0" x2="1.0" y2="1.2" selected="false"/>
      </descendants>
    </node>
    <node id="modeBtn3">
      <material id="demoMaterial"/>
      <texture id="modeBtn3">
        <amplification afs="0.4" aft="0.2"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="modeButton" id="3" x1="1.1" y1="1.0" x2="1.5" y2="1.2" selected="false"/>
      </descendants>
    </node>
    <node id="exitBtn">
      <material id="demoMaterial"/>
      <texture id="exitBtn">
        <amplification afs="0.1" aft="0.1"/>
      </texture>
      <transformations>
        <translation x="0.0" y="0.0" z="0.01"/>
      </transformations>
      <descendants>
        <leaf type="Button" id="1016" x1="1.85" y1="1.15" x2="1.95" y2="1.25" selected="false"/>
      </descendants>
    </node>

     <!-- SIZE COUNTER  ///////////////////////////////////////////-->
    <node id="sizeCounter">
      <material id="null"/>
      <texture id="null"/>
      <transformations>
        <translation x="1.6" y="0.5" z="0.02"/>
        <scale sx="0.25" sy="0.25" sz="1"/>
      </transformations>
      <descendants>
         <leaf type="spritetext" text="3"/>
      </descendants>
    </node>

    <node id="incrBtnSize">
      <material id="demoMaterial"/>
      <texture id="incrBtn">
        <amplification afs="0.1" aft="0.1"/>
      </texture>
      <transformations>
        <translation x="0" y="-.2" z="0.01"/>
      </transformations>
      <descendants>
         <leaf type="counterButton" id="4" x1="1.85" y1="0.75" x2="1.95" y2="0.85" selected="false" value="1"/>
      </descendants>
    </node>
    <node id="decrBtnSize">
      <material id="demoMaterial"/>
       <texture id="decrBtn">
        <amplification afs="0.1" aft="0.1"/>
      </texture>
      <transformations>
        <translation x="0.0" y="-0.2" z="0.01"/>
      </transformations>
      <descendants>
         <leaf type="counterButton" id="5" x1="1.85" y1="0.55" x2="1.95" y2="0.65" selected="false" value="-1"/>
      </descendants>
    </node>

    <!-- TIME COUNTER  //////////////////////////////////-->
    <node id="timeCounter">
      <material id="demoMaterial"/>
      <texture id="null"/>
      <transformations>
        <translation x="1.71" y="0.9" z="0.02"/>
        <scale sx="0.25" sy="0.25" sz="1"/>
      </transformations>
      <descendants>
         <leaf type="spritetext" text="10"/>
      </descendants>
    </node>
    <node id="incrBtnTime">
      <material id="demoMaterial"/>
      <texture id="incrBtn">
        <amplification afs="0.1" aft="0.1"/>
      </texture>
      <transformations>
        <translation x="0" y="0.2" z="0.01"/>
      </transformations>
      <descendants>
         <leaf type="counterButton" id="6" x1="1.85" y1="0.75" x2="1.95" y2="0.85" selected="false" value="1"/>
      </descendants>
    </node>
    <node id="decrBtnTime">
      <material id="demoMaterial"/>
       <texture id="decrBtn">
        <amplification afs="0.1" aft="0.1"/>
      </texture>
      <transformations>
        <translation x="0" y="0.2" z="0.01"/>
      </transformations>
      <descendants>
         <leaf type="counterButton" id="7" x1="1.85" y1="0.55" x2="1.95" y2="0.65" selected="false" value="-1"/>
      </descendants>
    </node>

    <node id="demoRoot">
      <!-- defines one intermediate node; may be repeated as necessary -->
      <!-- next two lines are mandatory -->
      <material id="demoMaterial"/>
      <!-- this superimposes the material received from parent node id="null" maintains material from parent node -->
      <texture id="demoTexture">
        <amplification afs="1.0" aft="1.0"/>
      </texture>
      <!-- geom. transf. are optional and may be repeated, in any order, as necessary: -->
      <transformations>
        <!--<translation x="0" y="1.0" z="1.0"/>-->
        <!--<rotation axis="yy" angle="45"/>-->
        <!--<scale sx="2" sy="1" sz="1"/>-->
      </transformations>
      <!-- declaring descendants, at least one node or one leaf must be present
             descendants may be mixed, nodes and leafs -->
      <descendants>
        <noderef id="menuPanel"/>
      </descendants>
    </node>
  </nodes>
</lsf>
