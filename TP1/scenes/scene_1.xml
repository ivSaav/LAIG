<?xml version="1.0"?>
<lsf>
  <initials>
    <reference length="2"/>
    <!-- axis length; "0" means no axis displayed -->
    <root id="rootNode"/>
    <!-- identifier of root node of the scene graph; this node -->
    <!-- must be defined in one of the following NODE declarations -->
  </initials>
  <views default="defaultCamera">
    <!-- at least one of the following type of cameras must be declared -->
    <perspective id="defaultCamera" near="0.1" far="500" angle="45">
      <from x="15" y="15" z="15"/>
      <to x="0" y="0" z="0"/>
    </perspective>
    <ortho id="orthogonal" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
      <from x="5" y="0" z="10"/>
      <to x="5" y="0" z="0"/>
      <up x="0" y="1" z="0"/>
      <!-- optional, default 0,1,0 -->
    </ortho>
  </views>
  <illumination>
    <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
    <!-- global ambient -->
    <background r="0.1" g="0.7" b="1.0" a="1.0"/>
    <!-- background color -->
  </illumination>
  <lights>
    <!-- NOTE: this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
    <light id="light_1">
      <!-- light identifier -->
      <enable value="1"/>
      <!-- enable/disable -->
      <position x="10" y="12" z="9.5" w="1.0"/>
      <!-- light position; w=1: point light; w=0: directional light -->
      <ambient r="0" g="0" b="0" a="1.0"/>
      <!-- ambient component -->
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0"/>
      <!-- diffuse component -->
      <specular r="1.0" g="1.0" b="1.0" a="1.0"/>
      <!-- specular component -->
    </light>
  </lights>
  <textures>
    <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->
    <texture id="woodText" path="./scenes/images/trunk-image.jpg"/>
  </textures>
  <materials>
    <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material

         requires a distinct "id". At least one material should be present. -->
    <material id="tableMaterial">
      <shininess value="1"/>
      <specular r="1.0" g="0.0" b="0.0" a="1.0"/>
      <!-- specular reflection -->
      <diffuse r="0.6" g="0.0" b="0.0" a="1.0"/>
      <!-- diffuse reflection -->
      <ambient r="0.6" g="0.0" b="0.0" a="1.0"/>
      <!-- ambient reflection -->
      <emissive r="0.0" g="0.0" b="0.0" a="1.0"/>
      <!-- emissive component -->
    </material>
  </materials>
  <nodes>
    <node id="rootNode">
      <material id="tableMaterial"/>
      <texture id="woodText">
        <amplification afs="2.0" aft="2.0"/>
      </texture>
      <!--
         -<transformations>
         -  <translation x="2.0" y="0.0" z="3.0"/>
         -  <rotation axis="x" angle="-90"/>
         -  <scale sx="0.2" sy="0.2" sz="0.1"/>
         -</transformations>
         -->
      <descendants>
        <noderef id="hull"/>
        <noderef id="caixote"/>
        <noderef id="mast"/>
        <noderef id="frontMast"/>
        <noderef id="backMast"/>
        <noderef id="frontHull"/>
        <noderef id="lowerHull"/>
      </descendants>
    </node>
    <!--//////////////////////////////////////////////////////////////////PRIMITIVAS -->
    <!--CUBO-->
    <node id="cube">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <descendants>
        <noderef id="faceCima"/>
        <noderef id="faceBaixo"/>
        <noderef id="faceLado1"/>
        <noderef id="faceLado2"/>
        <noderef id="faceLado3"/>
        <noderef id="faceLado4"/>
      </descendants>
    </node>
    <node id="faceLado1">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="0.0" y="0.0" z="0.5"/>
      </transformations>
      <descendants>
        <leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
      </descendants>
    </node>
    <node id="faceLado3">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="0.0" y="0.0" z="-0.5"/>
        <rotation axis="x" angle="180"/>
      </transformations>
      <descendants>
        <leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
      </descendants>
    </node>
    <node id="faceLado2">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="0.5" y="0.0" z="0.0"/>
        <rotation axis="y" angle="90"/>
      </transformations>
      <descendants>
        <leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
      </descendants>
    </node>
    <node id="faceLado4">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="-0.5" y="0.0" z="0.0"/>
        <rotation axis="y" angle="270"/>
      </transformations>
      <descendants>
        <leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
      </descendants>
    </node>
    <node id="faceCima">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="0.0" y="0.5" z="0.0"/>
        <rotation axis="x" angle="-90"/>
      </transformations>
      <descendants>
        <leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
      </descendants>
    </node>
    <node id="faceBaixo">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="0.0" y="-0.5" z="0.0"/>
        <rotation axis="x" angle="90"/>
      </transformations>
      <descendants>
        <leaf type="rectangle" x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
      </descendants>
    </node>
    <!--Prisma Triangular-->
    <node id="triangularPrism">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations/>
      <descendants>
        <noderef id="triangularPrismTop"/>
        <noderef id="triangularPrismBottom"/>
        <noderef id="triangularPrismFace1"/>
        <noderef id="triangularPrismFace2"/>
        <noderef id="triangularPrismFace3"/>
      </descendants>
    </node>
    <node id="triangularPrismTop">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="0.0" y="0.0" z="1.0"/>
      </transformations>
      <descendants>
        <leaf type="triangle" x1="1.0" y1="0.0" x2="-0.5" y2="0.866" x3="-0.5" y3="-0.866"/>
      </descendants>
    </node>
    <node id="triangularPrismBottom">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <rotation axis="x" angle="180"/>
      </transformations>
      <descendants>
        <leaf type="triangle" x1="1.0" y1="0.0" x2="-0.5" y2="0.866" x3="-0.5" y3="-0.866"/>
      </descendants>
    </node>
    <node id="triangularPrismFace1">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="-0.5" y="0.866" z="1.0"/>
        <rotation axis="z" angle="-30"/>
        <rotation axis="x" angle="-90"/>
      </transformations>
      <descendants>
        <leaf type="rectangle" x1="0.0" y1="0.0" x2="1.732" y2="1.0"/>
      </descendants>
    </node>
    <node id="triangularPrismFace2">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <rotation axis="z" angle="120"/>
      </transformations>
      <descendants>
        <noderef id="triangularPrismFace1"/>
      </descendants>
    </node>
    <node id="triangularPrismFace3">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <rotation axis="z" angle="120"/>
      </transformations>
      <descendants>
        <noderef id="triangularPrismFace2"/>
      </descendants>
    </node>
    <node id="frontHull">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="0.0" y="-0.5" z="4.1"/>
        <rotation axis="x" angle="-90"/>
        <rotation axis="z" angle="-90"/>
        <scale sx="1.2" sy="2.03" sz="1.0"/>
      </transformations>
      <descendants>
        <noderef id="triangularPrism"/>
      </descendants>
    </node>
    <node id="lowerHull">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="0.0" y="-1.0" z="-3.5"/>
        <rotation axis="z" angle="-90"/>
        <scale sx="1.0" sy="2.00" sz="7.0"/>
      </transformations>
      <descendants>
        <noderef id="triangularPrism"/>
      </descendants>
    </node>
    <!--//////////////////////////////////////////////////////////////////CENA-->
    <node id="hull">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <scale sx="3.5" sy="1.0" sz="7.0"/>
      </transformations>
      <descendants>
        <noderef id="cube"/>
      </descendants>
    </node>
    <node id="caixote">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="0.0" y="1.0" z="-3.5"/>
        <scale sx="3.5" sy="1.0" sz="2.0"/>
      </transformations>
      <descendants>
        <noderef id="cube"/>
      </descendants>
    </node>
    <node id="mast">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <rotation axis="x" angle="-90"/>
      </transformations>
      <descendants>
        <leaf type="cylinder" bottomRadius="0.2" topRadius="0.15" height="5.0" slices="100" stacks="400"/>
      </descendants>
    </node>
    <node id="frontMast">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="0.0" y="0.0" z="2.0"/>
        <scale sx="0.8" sy="0.7" sz="0.8"/>
      </transformations>
      <descendants>
        <noderef id="mast"/>
      </descendants>
    </node>
    <node id="backMast">
      <material id="tableMaterial"/>
      <textures id="woodText"/>
      <transformations>
        <translation x="0.0" y="0.0" z="-2.0"/>
        <scale sx="0.7" sy="0.7" sz="0.7"/>
      </transformations>
      <descendants>
        <noderef id="mast"/>
      </descendants>
    </node>
  </nodes>
</lsf>
